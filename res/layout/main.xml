<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:id="@+id/btnShowAccelerometer"
            android:layout_above="@+id/btnShowSMS" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS"
            android:id="@+id/btnShowSMS"
            android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/btnShowAccelerometer"
            android:layout_marginBottom="223dp" android:layout_alignRight="@+id/btnShowAccelerometer"/>
</RelativeLayout>
